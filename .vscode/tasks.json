{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Playdate: Build",
            "type": "shell",
            "linux": {
                "command": "PLAYDATE_SDK_PATH=${config:playdate.sdkPath} make simulator"
            },
            "osx": {
                "command": "PLAYDATE_SDK_PATH=${config:playdate.sdkPath} make"
            },
            "windows": {
                "command": "cmd",
                "args": ["/C", "if not exist ${workspaceFolder}\\builds mkdir ${workspaceFolder}\\builds"]
            }
        },
        {
            "type": "playdate-simulator",
            "problemMatcher": ["$pdc-external"],
            "label": "Playdate: Run",
        },
        {
            "label": "Playdate: Build and Run",
            "dependsOn": ["Playdate: Build", "Playdate: Run"],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
